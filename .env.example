# Telegram API credentials - Get these from https://my.telegram.org
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Bot token from @BotFather (optional, for bot mode)
BOT_TOKEN=your_bot_token_here

# ── Forwarder 설정 ──────────────────────────────────────

# Single source/target (legacy)
# SOURCE_ID=your_source_chat_id
# TARGET_ID=your_target_chat_id

# Multiple forwarding rules (recommended)
# Format: source_id:target_id1:target_id2,source_id2:target_id3
FORWARDING_RULES=-1001111111111:-1002222222222,-1003333333333:-1004444444444

# Examples:
# One-to-many: -1001111111111:-1002222222222:-1003333333333
# Many-to-one: -1001111111111:-1004444444444,-1002222222222:-1004444444444

# ── Trading Bot 설정 ────────────────────────────────────

# Binance API credentials - Get these from https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# 모니터링할 채널 (쉼표로 여러개 가능)
SOURCE_CHANNELS=channel_username

# 결과 보고 받을 내 텔레그램 유저 ID
MY_CHAT_ID=0

# 신호당 투입 금액 (USDT)
TRADE_AMOUNT=100

# 매도 금지 종목 (쉼표 구분)
SELL_BLOCKED=BTC,XRP

# 동시 포지션 제한
MAX_CONCURRENT=3

# 일일 최대 손실 (USDT)
DAILY_LOSS_LIMIT=500

# 진입 주문 타임아웃 (초, 600=10분)
ENTRY_TIMEOUT=600

# 통합 대시보드 포트 (기본: 8080)
DASHBOARD_PORT=8080
